<%layout("/layouts/boilerplate")%>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const coordinates = <%- JSON.stringify(listing.geometry?.coordinates || [75.8577,22.7196]) %>;
</script>
<div class="row mt-3">
  <div class="col-10 offset-1">
    <h3 class="mb-4" style="font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700;">
      <i class="bi bi-house-door-fill text-primary"></i> <b><%= listing.title %></b>
    </h3>
  </div>
  <div class="card col-10 offset-1 show-card listing-card shadow-lg border-0 rounded-4 mb-4"
       style="background: linear-gradient(120deg, #f8fafc 70%, #e0e7ff 100%); padding: 2rem 1.5rem;">
    <div class="row g-0">
      <div class="col-md-5 d-flex align-items-center justify-content-center"
           style="background: linear-gradient(135deg, #e0e7ff 60%, #f8fafc 100%); border-radius: 1rem 0 0 1rem;">
        <img src="<%= listing.image.url %>" class="img-fluid rounded-4 show-img"
             alt="listing_image"
             style="max-height: 260px; object-fit: cover; box-shadow: 0 2px 12px #2563eb22;">
      </div>
      <div class="col-md-7 d-flex flex-column justify-content-center"
           style="background: linear-gradient(135deg, #f8fafc 60%, #e0e7ff 100%); border-radius: 0 1rem 1rem 0;">
        <div class="card-body px-4">
          <p class="card-text mb-2">
            <span class="fw-bold text-secondary" style="font-size: 1rem;">Owned by:</span>
            <span class="text-primary" style="font-size: 1rem;"><i class="bi bi-person-circle"></i> <%= listing.owner.username %></span>
          </p>
          <p class="card-text mb-2 text-secondary" style="font-size: 1.08rem;"><%= listing.description %></p>
          <p class="card-text mb-2">
            <span class="fw-bold">&#8377;</span>
            <span class="text-success" style="font-size: 1.1rem;"><%= listing.price.toLocaleString("en-IN") %></span>
          </p>
          <p class="card-text mb-2">
            <i class="bi bi-geo-alt-fill text-danger"></i>
            <span style="font-size: 1rem;"><%= listing.location %>, <%= listing.country %></span>
          </p>
          <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
            <div class="btns mb-3 d-flex gap-2 justify-content-start">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn px-4 py-2 rounded-pill shadow-lg"
                 style="font-size: 1.08rem; letter-spacing: 0.5px; transition: background 0.2s, box-shadow 0.2s;"
                 onmouseover="this.style.background='#1e293b'; this.style.boxShadow='0 4px 16px #2563eb33';"
                 onmouseout="this.style.background='#212529'; this.style.boxShadow='none';">
                <i class="bi bi-pencil-square"></i> Edit
              </a>
              <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger delete-btn px-4 py-2 rounded-pill shadow-lg"
                  style="font-size: 1.08rem; letter-spacing: 0.5px; transition: background 0.2s, box-shadow 0.2s;"
                  onmouseover="this.style.background='#b91c1c'; this.style.boxShadow='0 4px 16px #ef444433';"
                  onmouseout="this.style.background='#dc3545'; this.style.boxShadow='none';">
                  <i class="bi bi-trash"></i> Delete
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-10 offset-1 mt-3">
    <hr/>
    <% if(currentUser) { %>
      <div class="card mb-4 shadow-sm border-0 rounded-4 p-4"
           style="background: linear-gradient(120deg, #e0e7ff 70%, #f8fafc 100%);">
        <h4 class="mb-3"><i class="bi bi-chat-left-text text-info"></i> Leave a review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="rating" class="form-label fw-bold" style="font-size: 1rem;">Rating</label>
            <div class="d-flex align-items-center gap-1 justify-content-start rating-stars">
              <% for(let i=1; i<=5; i++) { %>
                <input type="radio" class="d-none" name="review[rating]" id="star<%= i %>" value="<%= i %>" <%= i === 1 ? "checked" : "" %>>
                <label for="star<%= i %>" class="star-label" style="cursor:pointer;">
                  <i class="fa fa-star"></i>
                </label>
              <% } %>
            </div>
            <small class="text-muted ms-1" style="font-size: 0.95rem;">Click to rate from 1 to 5 stars</small>
          </div>
          <div class="mb-3 mt-2">
            <label for="comment" class="form-label fw-bold" style="font-size: 1rem;">Comments</label>
            <textarea id="comment" name="review[comment]" rows="5" class="form-control" required style="font-size: 1.08rem;"></textarea>
            <div class="valid-feedback">Comment Looks good!</div>
            <div class="invalid-feedback">Please provide a valid Comment.</div>
          </div>
          <button class="btn btn-outline-dark rounded-pill px-4 py-2 mt-2 shadow-lg"
            style="font-size: 1.08rem; letter-spacing: 0.5px; transition: background 0.2s, box-shadow 0.2s;"
            onmouseover="this.style.background='#1e293b'; this.style.color='#fff'; this.style.boxShadow='0 4px 16px #2563eb33';"
            onmouseout="this.style.background='#fff'; this.style.color='#212529'; this.style.boxShadow='none';">
            <i class="bi bi-send"></i> Submit
          </button>
        </form>
      </div>
    <% } %>
    <% if(listing.reviews.length) { %>
      <div class="card mb-4 shadow-sm border-0 rounded-4 p-4"
           style="background: linear-gradient(120deg, #f8fafc 70%, #e0e7ff 100%); min-height: 320px;">
        <h5 class="mb-3"><b>All Reviews</b></h5>
        <div class="row">
          <% for (review of listing.reviews) { %>
            <div class="card col-md-5 ms-3 mb-4 border-0 shadow-sm rounded-3"
                 style="background: linear-gradient(120deg, #e0e7ff 70%, #f8fafc 100%); min-height: 180px;">
              <div class="card-body d-flex flex-column justify-content-between" style="height: 100%;">
                <div>
                  <div class="d-flex align-items-center mb-2">
                    <h5 class="card-title mb-0 me-2" style="font-size: 1.08rem;">
                      <br>
                      <i class="bi bi-person-circle text-primary"></i> @<%= review.author.username %>
                    </h5>
                   
                  </div>
                   <div class="d-flex align-items-center ms-2 review-stars">
                      <% for(let i=1; i<=5; i++) { %>
                        <i class="fa fa-star <%= i <= review.rating ? 'checked' : '' %>"></i>
                      <% } %>
                    </div>
                  <p class="card-text" style="font-size: 1.08rem; margin-bottom: 0.5rem; min-height: 60px;"><%= review.comment %></p>
                </div>
                <% if(currentUser && currentUser._id.equals(review.author._id)) { %>
                  <form class="mb-2" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-light border rounded-pill px-3 py-2 shadow"
                      style="font-size: 1rem; transition: background 0.2s, box-shadow 0.2s;"
                      onmouseover="this.style.background='#fbbf24'; this.style.boxShadow='0 4px 16px #fbbf2433';"
                      onmouseout="this.style.background='#fff'; this.style.boxShadow='none';">
                      <i class="fa-solid fa-trash" style="color: #cd1d1d;"></i> Delete
                    </button>
                  </form>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
  <div class="col-10 offset-1 mt-3">
    <h3 class="mb-3"><i class="bi bi-geo-alt text-danger"></i> Where you'll be</h3>
    <div id="map" style="height: 350px; border-radius: 16px; overflow: hidden; box-shadow: 0 4px 24px #2563eb22; background: linear-gradient(120deg, #e0e7ff 70%, #f8fafc 100%);"></div>
  </div>
</div>
<script src="/js/map.js"></script>
<style>
  .rating-stars .star-label .fa-star {
    font-size: 1.5rem;
    color: #e5e7eb;
    transition: color 0.2s, transform 0.2s;
    margin-right: 2px;
  }
  .rating-stars .star-label.active .fa-star,
  .rating-stars .star-label:hover .fa-star {
    color: #fbbf24 !important;
    transform: scale(1.15);
    text-shadow: 0 2px 8px #fbbf24;
  }
  .review-stars .fa-star {
    color: #e5e7eb;
    font-size: 1.25rem;
    margin-right: 2px;
    transition: color 0.2s;
  }
  .review-stars .fa-star.checked {
    color: #fbbf24 !important;
    text-shadow: 0 2px 8px #fbbf24;
  }
  .card-body {
    padding: 1rem 0.5rem;
  }
  .show-card .card-body {
    padding: 1.5rem 1rem;
  }
  .btn, .btn:focus {
    box-shadow: 0 2px 8px #2563eb22;
    outline: none !important;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const stars = document.querySelectorAll('.rating-stars .star-label');
    stars.forEach((star, idx) => {
      star.addEventListener('mouseover', () => {
        stars.forEach((s, i) => {
          s.classList.toggle('active', i <= idx);
        });
      });
      star.addEventListener('mouseout', () => {
        const checkedIdx = Array.from(stars).findIndex(s => s.previousElementSibling.checked);
        stars.forEach((s, i) => {
          s.classList.toggle('active', i <= checkedIdx);
        });
      });
      star.addEventListener('click', () => {
        stars.forEach((s, i) => {
          s.previousElementSibling.checked = i === idx;
          s.classList.toggle('active', i <= idx);
        });
      });
    });
    // Initialize stars on page load
    const checkedIdx = Array.from(stars).findIndex(s => s.previousElementSibling.checked);
    stars.forEach((s, i) => {
      s.classList.toggle('active', i <= checkedIdx);
    });
  });
</script>