<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissible fade show col-10 col-md-6 offset-1 offset-md-3 shadow-lg rounded-4 border-0 position-fixed start-50 translate-middle-x"
       role="alert"
       id="flash-success"
       style="font-size: 1.12rem; font-weight: 600; background: linear-gradient(90deg, #d1fae5 70%, #bbf7d0 100%); box-shadow: 0 6px 32px #22c55e33; top: 80px; z-index: 1055; border-left: 8px solid #22c55e;">
    <i class="fa-solid fa-circle-check me-2 text-success" style="font-size: 1.3rem;"></i>
    <span class="me-2"><%= success %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"
      style="filter: brightness(0.7);"></button>
  </div>
<% } %>
<% if (error && error.length) { %>
  <div class="alert alert-danger alert-dismissible fade show col-10 col-md-6 offset-1 offset-md-3 shadow-lg rounded-4 border-0 position-fixed start-50 translate-middle-x"
       role="alert"
       id="flash-error"
       style="font-size: 1.12rem; font-weight: 600; background: linear-gradient(90deg, #fee2e2 70%, #fecaca 100%); box-shadow: 0 6px 32px #ef444433; top: 80px; z-index: 1055; border-left: 8px solid #ef4444;">
    <i class="fa-solid fa-circle-exclamation me-2 text-danger" style="font-size: 1.3rem;"></i>
    <span class="me-2"><%= error %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"
      style="filter: brightness(0.7);"></button>
  </div>
<% } %>
<script>
  setTimeout(() => {
    const successAlert = document.getElementById('flash-success');
    if (successAlert) {
      successAlert.classList.remove('show');
      successAlert.classList.add('hide');
      setTimeout(() => successAlert.remove(), 500);
    }
    const errorAlert = document.getElementById('flash-error');
    if (errorAlert) {
      errorAlert.classList.remove('show');
      errorAlert.classList.add('hide');
      setTimeout(() => errorAlert.remove(), 500);
    }
  }, 7000);
</script>