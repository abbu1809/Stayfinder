<% layout("/layouts/boilerplate") %>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
  <div class="card shadow-lg border-0 rounded-4" style="max-width: 650px; width: 100%; background: linear-gradient(120deg, #f8fafc 70%, #ffe5e5 100%); padding: 3rem 2.5rem;">
    <div class="card-header text-center border-0" style="background: transparent;">
      <div class="d-flex flex-column align-items-center">
        <span class="rounded-circle bg-danger-subtle mb-3 d-flex justify-content-center align-items-center" style="width: 70px; height: 70px;">
          <i class="bi bi-emoji-frown text-danger" style="font-size: 2.5rem;"></i>
        </span>
        <h2 class="mb-0" style="font-family: 'Plus Jakarta Sans', sans-serif; color: #d7263d; font-weight: 700; letter-spacing: 1px;">Oops! Something Went Wrong</h2>
      </div>
    </div>
    <div class="card-body text-center">
      <h5 class="text-danger mb-3" style="font-weight: 600; font-size: 1.3rem;"><%= message %></h5>
      <p class="mb-4 text-secondary" style="font-size: 1.15rem;">
        We couldn't find the page you were looking for.<br>
        Try refreshing, or head back to explore more listings!
      </p>
      <a href="/listings" class="btn btn-danger px-5 py-2 rounded-pill shadow-sm" style="font-size: 1.1rem; font-weight: 600; letter-spacing: 0.5px;">
        <i class="bi bi-arrow-left"></i> Back to Home
      </a>
    </div>
    <div class="card-footer bg-transparent border-0 text-center mt-2">
      <small class="text-muted" style="font-size: 0.95rem;">
        Need help? <a href="mailto:" class="text-danger text-decoration-underline">Contact Support</a>
      </small>
    </div>
  </div>
</div>